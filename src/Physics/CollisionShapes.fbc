namespace Eldritch2.Physics.FlatBuffers;

struct Float3 {
	X	: float;
	Y	: float;
	Z	: float;
}

table SphereShape {
	Radius	: float;
}

table BoxShape {
	HalfExtent	: Float3;
}

table CapsuleShapeX {
	Radius	: float;
	Height	: float;
}

table CapsuleShapeY {
	Radius	: float;
	Height	: float;
}

table CapsuleShapeZ {
	Radius	: float;
	Height	: float;
}

union CollisionShape {
	SphereShape,
	BoxShape,
	CapsuleShapeX,
	CapsuleShapeY,
	CapsuleShapeZ
}
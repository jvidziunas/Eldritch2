include "CollisionShapes.fbc";
file_extension	"e2articulatedbody";

namespace Eldritch2.Physics.FlatBuffers;

table Body {
	BoneIndex		: ushort;
	Shape			: CollisionShape (required);
	Mass			: float;
	LinearDamping	: float;
	AngularDamping	: float;
	Friction		: float;
	RollingFriction	: float;
	Restitution		: float;
}

table ArticulatedBody {
	Bodies	: [Body];
}

root_type ArticulatedBody;
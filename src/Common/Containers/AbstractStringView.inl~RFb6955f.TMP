template <typename Character>
ETCpp14Constexpr bool AbstractStringView<Character>::StartsWith(const AbstractStringView<Character>& prefix) const {
	return prefix.GetLength() <= this->GetLength() ? Substring(0, prefix.GetLength()).Compare(prefix) == 0 : false;
}

// ----------------------------------------------------

template <typename Character>
ETCpp14Constexpr bool AbstractStringView<Character>::EndsWith(const AbstractStringView<Character>& suffix) const {
	return suffix.GetLength() <= this->GetLength() ? Substring(this->GetLength() - suffix.GetLength(), suffix.GetLength()).Compare(suffix) == 0 : false;
}

// ----------------------------------------------------

template <typename Character>
ETCpp14Constexpr ETInlineHint void AbstractStringView<Character>::RemovePrefix(const AbstractStringView<Character>& prefix) {
	if (StartsWith(prefix)) {
		RemovePrefix(prefix.GetLength());
	}
}

// ----------------------------------------------------

template <typename Character>
ETCpp14Constexpr ETInlineHint void AbstractStringView<Character>::RemovePrefix(SizeType length) {
	_view.remove_prefix(length);
}

// ----------------------------------------------------

template <typename Character>
ETCpp14Constexpr ETInlineHint void AbstractStringView<Character>::RemoveSuffix(const AbstractStringView<Character>& suffix) {
	if (EndsWith(suffix)) {
		RemoveSuffix(suffix.GetLength());
	}
}

// ----------------------------------------------------

template <typename Character>
ETCpp14Constexpr ETInlineHint void AbstractStringView<Character>::RemoveSuffix(SizeType length) {

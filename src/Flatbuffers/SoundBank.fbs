file_identifier	"ESBF";
file_extension	".e2soundbank";

namespace Eldritch2.Sound.FlatBuffers;

table CueDescriptor {
	GrainOffsets : [ulong] (required);
}

table SoundBankDescriptor {
	ChannelMask : uint32;
	SampleHz    : uint32;
	Cues	    : [CueDescriptor] (required);
	OpusStream  : [ubyte]         (required);
}

root_type SoundBankDescriptor;
include			"Eldritch2Types.fbs";

file_identifier	"E2SW";
file_extension	".e2world";

namespace Eldritch2.Scripting.Wren.FlatBuffers;

struct ObjectReference {
	Id : uint32;
}

table EntityDescriptor {
	Type   : string (required);
	Fields : [ubyte] (flexbuffer);
}

table WorldDescriptor {
	ApiFingerprint : [ubyte] (required);
	Packages       : [string] (required);
	Entities       : [EntityDescriptor];
}

root_type WorldDescriptor;